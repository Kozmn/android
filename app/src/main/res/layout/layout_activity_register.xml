<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F8FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rejestracja"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#2E3192"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittext_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Hasło"
            android:inputType="textPassword"
            android:background="@drawable/edittext_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/et_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Potwierdź hasło"
            android:inputType="textPassword"
            android:background="@drawable/edittext_background"
            android:padding="16dp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Typ konta:"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/rg_account_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <RadioButton
                android:id="@+id/rb_patient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pacjent" />

            <RadioButton
                android:id="@+id/rb_caregiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opiekun" />

        </RadioGroup>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Zarejestruj się"
            android:textSize="18sp"
            android:backgroundTint="#2E3192" />

    </LinearLayout>

</ScrollView>